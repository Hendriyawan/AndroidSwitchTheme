<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
	</style>
	
	<style name="toolbar_light_style" parent="Widget.AppCompat.Toolbar">
		<item name="theme">@style/toolbar_light</item>
		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
		<item name="android:background">@color/colorPrimary</item>
	</style>
	
	<style name="toolbar_dark_style" parent="Widget.AppCompat.Toolbar">
		<item name="android:background">@color/colorPrimary</item>
	</style>
	
	<style name="toolbar_light" parent="ThemeOverlay.AppCompat.Light">
        <!--used to for the title of toolbar-->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--used to for the title of the Toolbar when parent is Theme.AppCompat.Light-->
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <!--used to color the text of the action menu icons-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <!--used to color the overflow menu icon-->
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
</resources>